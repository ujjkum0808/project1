<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmenthome">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="54dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/flip">

    </ViewFlipper>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME TO BCET"
        android:textColor="#000000"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="130dp"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="2dp"
        android:background="#F5B652"
        android:text="Admission" />

    <Button
        android:id="@+id/button4"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="98dp"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="2dp"
        android:background="#F5B652"
        android:text="Placement" />

    <Button
        android:id="@+id/button5"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="102dp"
        android:layout_marginRight="102dp"
        android:background="#F5B652"
        android:text="Achivement" />

    <Button
        android:id="@+id/button6"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="7dp"
        android:background="#F5B652"
        android:text="About" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="265dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:text="@string/dec3_txt" />
            <Button
                android:id="@+id/button7"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Register Yourself"
                android:background="#00ff00"
                android:textAlignment="center"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="20dp"/>
            <Button
                android:id="@+id/button8"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Importent Notice"
                android:background="#ff0000"
                android:textAlignment="center"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="20dp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/button7"
                android:background="#ff9703"
                android:layout_marginTop="20dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:background="#BEC0C2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="17dp"
                    android:text="Developer:"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:text="Ujjwal Kumar"
                    android:textColor="#000000"
                    android:textSize="11dp" />

                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="41dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="66dp"
                    android:src="@drawable/facebook122" />

                <ImageView
                    android:id="@+id/instagram"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="52dp"
                    android:layout_marginTop="74dp"
                    android:src="@drawable/insta1" />

                <ImageView
                    android:id="@+id/twiter"
                    android:layout_width="28dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="91dp"
                    android:layout_marginTop="74dp"
                    android:src="@drawable/twit2" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
</FrameLayout>