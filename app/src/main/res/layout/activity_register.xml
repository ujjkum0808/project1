<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#abffff"
    tools:context=".register">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="421dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-3dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="-144dp"
        app:srcCompat="@drawable/bcetback" />

    <RelativeLayout
        android:layout_width="336dp"
        android:layout_height="535dp"
        android:background="#fffff0"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Register"
            android:textColor="#f00fff"
            android:layout_marginLeft="90dp"
            android:textSize="26dp"/>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="50dp"
            android:text="Name"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="82dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint=" Your Answer"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="135dp"
            android:textSize="20dp"
            android:text="Email" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="166dp"
            android:background="@drawable/border"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint=" Your Answer" />

        <TextView
            android:id="@+id/textView122"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="220dp"
            android:text="Password"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/editText122"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="251dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint=" Your Answer"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="300dp"
            android:text="Contact No"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/editText4"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="330dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint=" Your Answer"
            android:inputType="number" />

        <Button
            android:id="@+id/button"
            android:layout_width="110dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="115dp"
            android:layout_marginLeft="115dp"
            android:layout_marginBottom="120dp"
            android:background="#00ff0f"
            android:text="Submit"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/alreadyreg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="430dp"
            android:text="Already Resistered? Click here"
            android:textSize="20dp"/>




    </RelativeLayout>


</RelativeLayout>