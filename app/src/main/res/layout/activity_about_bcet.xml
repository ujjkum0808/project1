<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about_bcet">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About BCET"
                android:textColor="#ff0000"
                android:textSize="24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:layout_width="369dp"
                android:layout_height="164dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/bcet1" />



         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

             <LinearLayout
                 android:layout_width="220dp"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:layout_marginLeft="10dp">


                 <TextView
                     android:layout_width="250dp"
                     android:layout_height="wrap_content"
                     android:text="@string/about_txt" />
             </LinearLayout>


             <LinearLayout
                 android:layout_width="150dp"
                 android:layout_height="485dp"
                 android:orientation="vertical"
                 android:layout_marginLeft="5dp">

                 <ImageView
                     android:layout_width="140dp"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="5dp"
                     android:layout_marginLeft="4dp"
                     app:srcCompat="@drawable/pros"
                     android:background="#0fcfaf"/>

                 <ImageView
                     android:layout_width="140dp"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="4dp"
                     android:layout_marginTop="5dp"
                     app:srcCompat="@drawable/tour"
                     android:background="#ff0000"/>

                 <ImageView
                     android:layout_width="140dp"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="5dp"
                     android:layout_marginLeft="4dp"
                     app:srcCompat="@drawable/apply"
                     android:background="#00ff00"/>

                 <ImageView
                     android:layout_width="140dp"
                     android:layout_height="64dp"
                     android:layout_marginLeft="4dp"
                     android:layout_marginTop="5dp"
                     app:srcCompat="@drawable/award" />

                 <ImageView
                     android:layout_width="140dp"
                     android:layout_height="63dp"
                     android:layout_marginLeft="4dp"
                     android:layout_marginTop="5dp"
                     app:srcCompat="@drawable/eleader" />

                 <ImageView
                     android:layout_width="140dp"
                     android:layout_height="60dp"
                     android:layout_marginLeft="4dp"
                     android:layout_marginTop="5dp"
                     app:srcCompat="@drawable/celebrate" />
             </LinearLayout>

         </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="#86888a"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Links"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Academic calender"
                android:textSize="16dp"
                android:textColor="#313335"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="20dp"/>

            <View
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="20dp"
                android:background="#313335"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anti ragging provisions"
                android:textSize="16dp"
                android:textColor="#313335"
                android:layout_marginLeft="20dp"/>

            <View
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="20dp"
                android:background="#313335"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Infrastructure and Faculties"
                android:textSize="16dp"
                android:textColor="#313335"
                android:layout_marginLeft="20dp"/>

            <View
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="20dp"
                android:background="#313335"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="College in news"
                android:textSize="16dp"
                android:textColor="#313335"
                android:layout_marginLeft="20dp"/>

            <View
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="20dp"
                android:background="#313335"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notices/Circulars"
                android:textSize="16dp"
                android:textColor="#313335"
                android:layout_marginLeft="20dp"/>
            <View
                android:layout_width="300dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="20dp"
                android:background="#313335"/>

        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All right reserved. Designed by Ujjwal Kumar"
                android:textColor="#313335"
                android:textAlignment="center"
                android:layout_marginTop="20dp"/>


        </LinearLayout>
    </ScrollView>



</FrameLayout>